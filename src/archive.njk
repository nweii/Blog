---
title: Archive
layout: main
pagination:
  data: collections.posts
  size: 1
---

<h1 class="title-wide">
  Archive
</h1>
<!-- Gather posts and display each in a feed -->
{% for post in collections.posts | reverse %}
{% if post.data.published %}
<div class="post-link">
  <p class="post-title link-hover">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </p>
  <div id="postInfo">
    <span class="date">
      {{ post.data.date | postDate }}
    </span>
    <span id="postTags" style="margin-left:0.5rem; margin-bottom:0.5rem">
      {% for tag in post.data.tags %}
      {% if tag != "posts" %}
      <a href="/tags/{{ tag }}" class="post-tag">
        {{ tag }}
      </a>
      {% endif %}
      {% endfor %}
    </span>
  </div>
</div>
{% endif %}
{% endfor %}
