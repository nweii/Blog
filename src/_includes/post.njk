---
layout: main
---

<div>
  <p class="postTitle">
    {{title}}
  </p>
  <p class="date">
    {{ date | postDate }}
  </p>
</div>

<article class="postContent">
  {{ content | safe }}
  More posts tagged:
  <div class="mt-3 pb-10">
  {% for tag in tags %}
    {% if tag != "posts" %}
      <a href="/tags/{{ tag }}">
        <span class="post-tag">{{ tag }}</span><br>
      </a>
    {% endif %}
  {% endfor %}
  </div>
</article>