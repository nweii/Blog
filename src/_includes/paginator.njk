<nav class="flex justify-center mt-8">
    <div class="inline-flex">
        {% if page.url != pagination.href.first %}
        <a href="{{ pagination.href.first }}">
            <button class="paginator-text">
                First
            </button>
        </a>
        {% else %}
        <button class="invisible paginator-text cursor-not-allowed">
        </button>
        {% endif %}
        {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}">
            <!--  -->
            <button class="py-2 px-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" aria-labelledby="prevTitle prevDesc">
                    <title id="prevTitle">Previous page</title>
                    <description id="prevDesc">Icon for navigating to the previous page</description>
                    <path stroke="none" d="M0 0h24v24H0z" />
                    <polyline points="15 6 9 12 15 18" />
                </svg>
            </button>
        </a>
        {% else %}
        <button class="py-2 px-4 cursor-not-allowed">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" aria-labelledby="prevTitle prevDesc">
                <title id="prevTitle">Previous page</title>
                <description id="prevDesc">Icon for navigating to the previous page</description>
                <path stroke="none" d="M0 0h24v24H0z" />
                <polyline points="15 6 9 12 15 18" />
            </svg>
        </button>
        {% endif %}

        {% for pageEntry in pagination.pages %}
        {% if page.url ==  pagination.hrefs[loop.index0] %}
        <a href="{{ pagination.hrefs[loop.index0] }}" aria-current="page">
            <button class="border bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4">
                {{ loop.index }}
            </button>
        </a>
        {% else %}
        <a href="{{ pagination.hrefs[loop.index0] }}">
            <button class="border border-gray-300 bg-white hover:bg-gray-300 text-gray-800 font-bold py-2 px-4">
                {{ loop.index }}
            </button>
        </a>
        {% endif %}
        {% endfor %}


        {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}">
            <button class="py-2 px-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" aria-labelledby="nextTitle nextDesc">
                    <title id="nextTitle">Next page</title>
                    <description id="nextDesc">Icon for navigating to the next page</description>
                    <path stroke="none" d="M0 0h24v24H0z" />
                    <polyline points="9 6 15 12 9 18" />
                </svg>
            </button>
        </a>
        {% else %}
        <button class="py-2 px-4 cursor-not-allowed">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" aria-labelledby="nextTitle nextDesc">
                <title id="nextTitle">Next page</title>
                <description id="nextDesc">Icon for navigating to the next page</description>
                <path stroke="none" d="M0 0h24v24H0z" />
                <polyline points="9 6 15 12 9 18" />
            </svg>
        </button>
        {% endif %}


        {% if page.url != pagination.href.last %}
        <a href="{{ pagination.href.last }}">
            <button class="paginator-text">
                Last
            </button>
        </a>
        {% else %}
        <button class="paginator-text cursor-not-allowed">
            Last
        </button>
        {% endif %}

    </div>

</nav>